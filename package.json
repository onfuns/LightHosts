{
  "name": "LightHosts",
  "version": "0.0.2",
  "author": {
    "name": "onfuns",
    "url": "https://github.com/onfuns"
  },
  "main": "./main.js",
  "description": "LightHosts",
  "scripts": {
    "eslint": "eslint src",
    "start": "webpack --config ./scripts/webpack.dev.config.js",
    "electron": "npm run build:main && cross-env NODE_ENV=development electron .",
    "build:renderer": "rimraf ./renderer_process && cross-env NODE_ENV=production webpack -p --progress --color --config ./scripts/webpack.prod.config.js",
    "build:main": "rimraf ./main_process && babel ./main --out-dir ./main_process",
    "build": "npm run build:main && npm run build:renderer",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win --ia32 ",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl",
    "pretty": "prettier --write '{src,main,scripts}/**/*.{jsx,tsx,ts,js}'",
    "test": "jest src"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.(ts|js)$"
  },
  "prettier": "@frontend-cli/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "keywords": [
    "Electron",
    "react"
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@frontend-cli/prettier-config": "^1.0.3",
    "antd": "^3.10.8",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.0",
    "codemirror": "^5.42.2",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "electron": "^4.2.1",
    "electron-builder": "^20.43.0",
    "electron-json-storage": "^4.1.5",
    "electron-reload": "^1.3.0",
    "eslint": "^3.17.1",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-react": "^7.13.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "mini-css-extract-plugin": "^0.7.0",
    "mobx": "^5.6.0",
    "mobx-react": "^5.4.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-loadable": "^5.5.0",
    "react-router": "^4.3.1",
    "react-router-config": "^4.4.0-beta.6",
    "react-router-dom": "^4.3.1",
    "rimraf": "^2.6.3",
    "shortid": "^2.2.14",
    "style-loader": "^0.18.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {},
  "build": {
    "appId": "LightHosts",
    "productName": "LightHosts",
    "directories": {
      "output": "packages",
      "buildResources": "resources"
    },
    "files": [
      "resources",
      "main_process",
      "renderer_process",
      "main.js",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "type": "file",
          "x": 130,
          "y": 150
        },
        {
          "type": "link",
          "path": "/Applications",
          "x": 410,
          "y": 150
        }
      ]
    }
  },
  "win": {
    "target": "nsis",
    "icon": "resources/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "resources/icon.png",
    "uninstallerIcon": "resources/icon.png",
    "installerHeaderIcon": "resources/icon.png",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "LightHosts"
  }
}
